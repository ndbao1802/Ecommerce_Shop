<div class="sidebar bg-dark text-white">
    <% if (locals.user) { %>
        <div class="user-info mb-4">
            <div class="d-flex align-items-center">
                <img src="<%= user.avatar || '/images/default-avatar.jpg' %>" alt="Admin" class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;">
                <div>
                    <h6 class="mb-0"><%= user.name %></h6>
                    <small class="text-muted">Administrator</small>
                </div>
            </div>
        </div>

        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link text-white" href="/admin/dashboard">
                    <i class="bi bi-speedometer2 me-2"></i> Dashboard
                </a>
            </li>

            <!-- Home Page Management -->
            <li class="nav-item">
                <a class="nav-link text-white" href="/admin/homepage/settings">
                    <i class="bi bi-house-door me-2"></i> Home Page
                </a>
            </li>

            <!-- Categories Management -->
            <li class="nav-item">
                <a class="nav-link text-white" href="/admin/categories">
                    <i class="bi bi-grid me-2"></i> Categories
                </a>
            </li>

            <!-- Products Management -->
            <li class="nav-item dropdown">
                <a class="nav-link text-white dropdown-toggle" href="#productSubmenu" data-bs-toggle="collapse">
                    <i class="bi bi-box me-2"></i> Products
                </a>
                <div class="collapse" id="productSubmenu">
                    <ul class="nav flex-column ms-3">
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/admin/products/categories">
                                <i class="bi bi-diagram-2 me-2"></i> Product Categories
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/admin/products">
                                <i class="bi bi-box-seam me-2"></i> All Products
                            </a>
                        </li>
                    </ul>
                </div>
            </li>

            <!-- Orders -->
            <li class="nav-item">
                <a class="nav-link text-white" href="/admin/orders">
                    <i class="bi bi-cart me-2"></i> Orders
                </a>
            </li>

            <!-- User Management -->
            <li class="nav-item">
                <a class="nav-link text-white" href="/admin/users">
                    <i class="bi bi-people me-2"></i> Users
                </a>
            </li>

            <!-- System Settings -->
            <li class="nav-item">
                <a class="nav-link text-white" href="/admin/settings">
                    <i class="bi bi-gear me-2"></i> System Settings
                </a>
            </li>

            <!-- Reports Section -->
            <li class="nav-item">
                <a class="nav-link text-white" href="#reportsCollapse" data-bs-toggle="collapse" role="button" aria-expanded="false">
                    <i class="bi bi-file-text me-2"></i> Reports
                </a>
                <div class="collapse" id="reportsCollapse">
                    <ul class="nav flex-column ms-3">
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/admin/reports">
                                <i class="bi bi-clipboard-data me-2"></i> Overview
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/admin/reports/revenue">
                                <i class="bi bi-graph-up me-2"></i> Revenue
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/admin/reports/products">
                                <i class="bi bi-box me-2"></i> Products
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/admin/reports/user">
                                <i class="bi bi-exclamation-triangle me-2"></i> User Reports
                            </a>
                        </li>
                    </ul>
                </div>
            </li>
        </ul>

        <div class="mt-auto">
            <a href="/admin/logout" class="btn btn-outline-light w-100">
                <i class="bi bi-box-arrow-right me-2"></i> Logout
            </a>
        </div>
    <% } %>
</div> 