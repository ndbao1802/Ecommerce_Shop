<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Products</h5>
                    <h2 class="mb-0"><%= counts?.products || 0 %></h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Categories</h5>
                    <h2 class="mb-0"><%= counts?.categories || 0 %></h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">Orders</h5>
                    <h2 class="mb-0"><%= counts?.orders || 0 %></h2>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">Recent Products</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th>Stock</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (locals.recentProducts && recentProducts.length > 0) { %>
                            <% recentProducts.forEach(product => { %>
                                <tr>
                                    <td><%= product.name %></td>
                                    <td><%= product.category ? product.category.name : 'N/A' %></td>
                                    <td>$<%= product.price.toFixed(2) %></td>
                                    <td><%= product.stock %></td>
                                    <td>
                                        <span class="badge bg-<%= product.isActive ? 'success' : 'danger' %>">
                                            <%= product.isActive ? 'Active' : 'Inactive' %>
                                        </span>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="5" class="text-center">No products found</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div> 