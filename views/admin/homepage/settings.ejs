<div class="container-fluid">
    <h2 class="mb-4">Home Page Settings</h2>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Featured Products</h5>
        </div>
        <div class="card-body">
            <form action="/admin/homepage/featured-products" method="POST">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h6>Current Featured Products</h6>
                        <div class="featured-products-list" id="featuredProductsList">
                            <% featuredProducts.forEach(product => { %>
                                <div class="card mb-2">
                                    <div class="card-body d-flex align-items-center">
                                        <img src="<%= product.images[0] %>" alt="<%= product.name %>" 
                                             class="me-3" style="width: 50px; height: 50px; object-fit: cover;">
                                        <div class="flex-grow-1">
                                            <h6 class="mb-0"><%= product.name %></h6>
                                            <small class="text-muted"><%= product.category.name %></small>
                                        </div>
                                        <input type="hidden" name="productIds[]" value="<%= product._id %>">
                                        <input type="number" name="displayOrders[]" value="<%= product.displayOrder %>" 
                                               class="form-control form-control-sm ms-2" style="width: 70px">
                                        <button type="button" class="btn btn-sm btn-danger ms-2 remove-featured">
                                            <i class="bi bi-x"></i>
                                        </button>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <h6>Available Products</h6>
                        <div class="available-products-list">
                            <% availableProducts.forEach(product => { %>
                                <div class="card mb-2">
                                    <div class="card-body d-flex align-items-center">
                                        <img src="<%= product.images[0] %>" alt="<%= product.name %>" 
                                             class="me-3" style="width: 50px; height: 50px; object-fit: cover;">
                                        <div class="flex-grow-1">
                                            <h6 class="mb-0"><%= product.name %></h6>
                                            <small class="text-muted"><%= product.category.name %></small>
                                        </div>
                                        <button type="button" class="btn btn-sm btn-primary add-featured" 
                                                data-product-id="<%= product._id %>"
                                                data-product-name="<%= product.name %>"
                                                data-product-image="<%= product.images[0] %>"
                                                data-category="<%= product.category.name %>">
                                            <i class="bi bi-plus"></i>
                                        </button>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Save Changes</button>
            </form>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Add featured product
    document.querySelectorAll('.add-featured').forEach(button => {
        button.addEventListener('click', function() {
            const productId = this.dataset.productId;
            const productName = this.dataset.productName;
            const productImage = this.dataset.productImage;
            const category = this.dataset.category;

            const newFeaturedProduct = `
                <div class="card mb-2">
                    <div class="card-body d-flex align-items-center">
                        <img src="${productImage}" alt="${productName}" 
                             class="me-3" style="width: 50px; height: 50px; object-fit: cover;">
                        <div class="flex-grow-1">
                            <h6 class="mb-0">${productName}</h6>
                            <small class="text-muted">${category}</small>
                        </div>
                        <input type="hidden" name="productIds[]" value="${productId}">
                        <input type="number" name="displayOrders[]" value="999" 
                               class="form-control form-control-sm ms-2" style="width: 70px">
                        <button type="button" class="btn btn-sm btn-danger ms-2 remove-featured">
                            <i class="bi bi-x"></i>
                        </button>
                    </div>
                </div>
            `;

            document.getElementById('featuredProductsList').insertAdjacentHTML('beforeend', newFeaturedProduct);
            this.closest('.card').remove();
        });
    });

    // Remove featured product
    document.addEventListener('click', function(e) {
        if (e.target.closest('.remove-featured')) {
            e.target.closest('.card').remove();
        }
    });
});
</script> 