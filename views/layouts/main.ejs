<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= locals.title ? title + ' - Gaming Store' : 'Gaming Store' %></title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
    <script>
        // Initialize user data
        window.user = <%- locals.user ? JSON.stringify({
            id: user._id.toString(),
            name: user.name,
            email: user.email
        }) : 'null' %>;
    </script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <style>
        .dropdown-toggle::after {
            display: none;  /* Hide the default dropdown arrow */
        }

        .nav-link img {
            transition: transform 0.2s;
        }

        .nav-link:hover img {
            transform: scale(1.1);
        }

        .dropdown-menu {
            min-width: 200px;
            padding: 0.5rem 0;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }

        .dropdown-item {
            padding: 0.5rem 1rem;
            display: flex;
            align-items: center;
        }

        .dropdown-item:hover {
            background-color: #f8f9fa;
        }

        .dropdown-item i {
            width: 1.2rem;
            text-align: center;
        }

        .dropdown-divider {
            margin: 0.5rem 0;
        }

        .text-danger:hover {
            background-color: #dc3545 !important;
            color: white !important;
        }
    </style>
</head>
<body>
    <%- include('../partials/navbar') %>
    <main>
        <%- body %>
    </main>
    <%- include('../partials/footer') %>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Cart JavaScript -->
    <script src="/js/cart.js"></script>
    <!-- Custom JavaScript -->
    <script src="/js/main.js"></script>
    <script>
        // Initialize all dropdowns
        var dropdowns = document.querySelectorAll('.dropdown-toggle');
        dropdowns.forEach(function(dropdown) {
            new bootstrap.Dropdown(dropdown, {
                hover: true,  // Enable hover trigger
                delay: {
                    show: 100,
                    hide: 300
                }
            });
        });

        // Optional: Close dropdown when clicking outside
        document.addEventListener('click', function(e) {
            if (!e.target.matches('.dropdown-toggle') && !e.target.closest('.dropdown-menu')) {
                dropdowns.forEach(function(dropdown) {
                    var instance = bootstrap.Dropdown.getInstance(dropdown);
                    if (instance) instance.hide();
                });
            }
        });
    </script>
</body>
</html> 