<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Store</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- Top Bar -->
    <div class="top-bar bg-light py-2">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <div class="language-currency">
                    <select class="form-select form-select-sm d-inline-block w-auto me-2">
                        <option>ENGLISH</option>
                        <option>ESPAÑOL</option>
                    </select>
                    <select class="form-select form-select-sm d-inline-block w-auto">
                        <option>$ USD</option>
                        <option>€ EUR</option>
                    </select>
                </div>
                <div class="user-actions">
                    <% if (locals.user) { %>
                        <a href="/users/profile" class="text-dark me-3">
                            <i class="bi bi-person"></i> <%= user.name %>
                        </a>
                        <a href="/users/logout" class="text-dark">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </a>
                    <% } else { %>
                        <a href="/users/login" class="text-dark me-3">
                            <i class="bi bi-person"></i> Login
                        </a>
                        <a href="/users/register" class="text-dark">
                            <i class="bi bi-person-plus"></i> Register
                        </a>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Header -->
    <header class="main-header py-4">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-3">
                    <a href="/" class="logo text-center d-block">
                        <h1 class="mb-0">STORE</h1>
                    </a>
                </div>
                <div class="col-md-6">
                    <form class="search-form">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search products...">
                            <button class="btn btn-dark" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </form>
                </div>
                <div class="col-md-3">
                    <div class="d-flex justify-content-end">
                        <a href="/cart" class="cart-icon position-relative me-3">
                            <i class="bi bi-bag fs-4"></i>
                            <span class="cart-count position-absolute top-0 start-100 translate-middle badge rounded-pill bg-primary">
                                0
                            </span>
                        </a>
                        <div class="cart-info text-end">
                            <small class="d-block">Your Cart</small>
                            <span class="fw-bold">$0.00</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Navigation -->
    <nav class="main-nav bg-dark">
        <div class="container">
            <ul class="nav justify-content-center">
                <li class="nav-item">
                    <a class="nav-link text-white" href="/">HOME</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/products">SHOP</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/categories">CATEGORIES</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/blog">BLOG</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/contact">CONTACT</a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <main>
        <%- body %>
    </main>

    <!-- Features Section -->
    <section class="features py-5 bg-light">
        <div class="container">
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-arrow-counterclockwise fs-1 me-3"></i>
                        <div>
                            <h5 class="mb-1">FREE RETURN</h5>
                            <p class="mb-0">30 days money back guarantee!</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-truck fs-1 me-3"></i>
                        <div>
                            <h5 class="mb-1">FREE SHIPPING</h5>
                            <p class="mb-0">Free shipping on all orders</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-headset fs-1 me-3"></i>
                        <div>
                            <h5 class="mb-1">SUPPORT 24/7</h5>
                            <p class="mb-0">We support online 24 hours a day</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-dark text-white pt-5 pb-3">
        <div class="container">
            <div class="row g-4">
                <div class="col-md-3">
                    <h5>ABOUT US</h5>
                    <p class="text-muted">Your trusted online shopping destination for quality products and excellent service.</p>
                </div>
                <div class="col-md-3">
                    <h5>INFORMATION</h5>
                    <ul class="list-unstyled text-muted">
                        <li><a href="#" class="text-muted">About Us</a></li>
                        <li><a href="#" class="text-muted">Delivery Information</a></li>
                        <li><a href="#" class="text-muted">Privacy Policy</a></li>
                        <li><a href="#" class="text-muted">Terms & Conditions</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5>MY ACCOUNT</h5>
                    <ul class="list-unstyled text-muted">
                        <li><a href="#" class="text-muted">My Account</a></li>
                        <li><a href="#" class="text-muted">Order History</a></li>
                        <li><a href="#" class="text-muted">Wish List</a></li>
                        <li><a href="#" class="text-muted">Newsletter</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5>CONTACT US</h5>
                    <ul class="list-unstyled text-muted">
                        <li><i class="bi bi-geo-alt me-2"></i> 123 Street Name, City, Country</li>
                        <li><i class="bi bi-telephone me-2"></i> (123) 456-7890</li>
                        <li><i class="bi bi-envelope me-2"></i> info@example.com</li>
                    </ul>
                </div>
            </div>
            <hr class="my-4">
            <div class="row">
                <div class="col-md-6">
                    <p class="mb-0">&copy; 2024 Your Store. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-end">
                    <img src="/images/payment-methods.png" alt="Payment Methods" style="height: 30px;">
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
</body>
</html> 