<div class="container py-5">
    <h2 class="mb-4">Checkout</h2>
    
    <div class="row">
        <!-- Order Summary -->
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title mb-4">Order Items</h5>
                    <% cart.forEach(item => { %>
                        <div class="d-flex align-items-center mb-3 pb-3 border-bottom">
                            <img src="<%= item.product.images?.[0]?.url || '/images/default.jpg' %>"
                                 alt="<%= item.product.name %>"
                                 class="me-3"
                                 style="width: 60px; height: 60px; object-fit: contain;">
                            <div class="flex-grow-1">
                                <h6 class="mb-0"><%= item.product.name %></h6>
                                <small class="text-muted">
                                    Quantity: <%= item.quantity %>
                                </small>
                            </div>
                            <div class="text-end">
                                <div>$<%= (item.product.price * item.quantity).toFixed(2) %></div>
                                <small class="text-muted">
                                    $<%= item.product.price.toFixed(2) %> each
                                </small>
                            </div>
                        </div>
                    <% }); %>
                    
                    <div class="d-flex justify-content-between mt-4">
                        <h6>Total:</h6>
                        <h6>$<%= total.toFixed(2) %></h6>
                    </div>
                </div>
            </div>
            
            <!-- Shipping Address -->
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title mb-4">Shipping Address</h5>
                    <!-- Add shipping form here -->
                </div>
            </div>
        </div>
        
        <!-- Payment Summary -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title mb-4">Payment Summary</h5>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Subtotal</span>
                        <span>$<%= total.toFixed(2) %></span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Shipping</span>
                        <span>$0.00</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-4">
                        <strong>Total</strong>
                        <strong>$<%= total.toFixed(2) %></strong>
                    </div>
                    <button class="btn btn-primary w-100" onclick="processPayment()">
                        Place Order
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function processPayment() {
    // Add payment processing logic here
}
</script> 